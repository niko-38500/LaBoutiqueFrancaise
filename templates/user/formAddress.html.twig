{% block body %}
    {{ form_start(form) }}
        <div class="container address-form-container">
            <div class="address-field">{{ form_row(form.name) }}</div>
            <div class="address-field">{{ form_row(form.firstname) }}</div>
            <div class="address-field">{{ form_row(form.lastname) }}</div>
            <div class="address-field">{{ form_row(form.address) }}</div>
            <div class="address-field">{{ form_row(form.postal) }}</div>
            <div class="address-field">{{ form_row(form.city) }}</div>
            <div class="address-field">{{ form_row(form.country) }}</div>
            <div class="address-field">{{ form_row(form.phone) }}</div>
            <div class="address-field">{{ form_row(form.company) }}</div>
            <div class="address-field">{{ form_row(form.submit) }}</div>
        </div> 
    {{ form_end(form) }}
    <hr class="separator">
{% endblock %}